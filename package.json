{
  "name": "aws-cdk-datadog-ecs-integration",
  "version": "0.2.0",
  "description": "Datadog ECS integrations for Fargate and EC2 Task Definitions",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "jsii",
    "watch": "jsii -w",
    "package": "jsii-pacmak -v",
    "test": "jest",
    "lint": "tslint 'lib/**/*.ts{,x}'"
  },
  "jsii": {
    "outdir": "dist"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      ".d.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      },
      "testEnvironment": "node"
    }
  },
  "dependencies": {
    "@aws-cdk/core": "^1.27.0",
    "@aws-cdk/aws-ecs": "^1.27.0",
    "@aws-cdk/aws-ssm": "^1.27.0"
  },
  "peerDependencies": {
    "@aws-cdk/core": "^1.27.0",
    "@aws-cdk/aws-ecs": "^1.27.0",
    "@aws-cdk/aws-ssm": "^1.27.0"
  },
  "author": {
    "name": "Markus Lindqvist"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/markusl/aws-cdk-datadog-ecs-integration"
  },
  "engines": {
    "node": ">= 10.3.0"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.27.0",
    "@types/jest": "^25.1.4",
    "jest": "^25.1.0",
    "jsii": "^1.1.0",
    "jsii-pacmak": "^1.1.0",
    "ts-jest": "^25.2.1",
    "tslint": "^6.1.0"
  }
}
